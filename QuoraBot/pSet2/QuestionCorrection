question = " this isn't a       relevant question , is it??? "

import re

chars = re.findall('[\S]+', question)

mark = list(chars[-1])

counter = 0
while counter < len(mark):
    if mark[counter] == '?':
        mark.remove(mark[counter])
        counter = counter
    else:
        counter = counter + 1
        
chars2 = re.findall('[/b]', question)


        